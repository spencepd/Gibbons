<h1>Survey</h1>

<div class="survey_form">
  <%= form_tag do %>
	<% @groups.each do |grp| %>
	<h3><%= grp.label %></h3>
	  <% grp.questions.each do |ques| %>
		<%= ques.label %>
	    <% ques.questionAnswers.each do |ans| %>
		  <%= check_box_tag("question_group_id:#{grp.id}.question_id:#{ques.id}.question_answer_id:#{ans.id}") %>
		  <%= label_tag("group_id#{grp.id}.question_id#{ques.id}.answer_id#{ans.id}", ans.label) %>
	    <% end %>
	  <% end %>
	<% end %>

	<div>
	  <%= submit_tag "Submit Answers" %>
    </div>
  <% end %>
</div>
